{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src/"
  }
}
