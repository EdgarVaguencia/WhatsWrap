{
  "files": [
    "src/scripts/browser/**/*.ts",
    "src/scripts/manager/*.ts",
    "src/scripts/preload/*.ts",
    "src/scripts/render/*.ts",
    "src/scripts/tools/*.ts",
    "src/scripts/*.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015","es2016","dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  }
}
